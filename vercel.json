{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    },
    {
      "src": "server/health.ts",
      "use": "@vercel/node"
    }
  ],
  
  "routes": [
    {
      "src": "/health",
      "dest": "/server/health.ts"
    },
    {
      "src": "/api/health",
      "dest": "/server/health.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  
  "env": {
    "NODE_ENV": "production"
  },

  "functions": {
    "server/health.ts": {
      "maxDuration": 5
    },
    "api/index.ts": {
      "maxDuration": 10
    }
  }
}
