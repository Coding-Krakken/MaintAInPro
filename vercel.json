{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  
  "routes": [
    {
      "src": "/health",
      "dest": "/api/health"
    },
    {
      "src": "/api/health", 
      "dest": "/server/health.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  
  "env": {
    "NODE_ENV": "production"
  },
  
  "functions": {
    "server/index.ts": {
      "maxDuration": 10
    },
    "server/health.ts": {
      "maxDuration": 5
    }
  }
}
