# Development Environment Configuration for PostgreSQL Migration Testing
# This file is for local development and migration testing

# Development Database (can be local PostgreSQL or Neon)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/maintainpro_dev?sslmode=prefer

# Node Environment (set to production to test DatabaseStorage locally)
NODE_ENV=development

# Server Configuration
PORT=5000
CLIENT_PORT=3000

# JWT Configuration for development
JWT_SECRET=development-jwt-secret-key-change-in-production
JWT_EXPIRY=24h

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Webhook Configuration
WEBHOOK_SECRET=development-webhook-secret

# Development flags for migration testing
MIGRATION_PHASE=1
ENABLE_DATABASE_STORAGE=false
